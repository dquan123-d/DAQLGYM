@model IEnumerable<DAQLGYM.Models.TblBlog>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<body class="hold-transition sidebar-mini">
    <div class="wrapper">

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-12">
                            <h1>Simple Tables</h1>
                        </div>
                        <div class="col-sm-12">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item active">Simple Tables</li>
                            </ol>
                        </div>
                    </div>
                </div><!-- /.container-fluid -->
            </section>

            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">Quản lý bài viết</h3>
                                    <br />
                                    <p>
                                        <a asp-action="Create">Thêm bài viết</a>
                                    </p>
                                </div>
                                <!-- /.card-header -->
                                <div class="card-body">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th>
                                                    Tiêu đề
                                                </th>
                                                <th>
                                                    Mô tả
                                                </th>


                                                <th>
                                                    Ảnh
                                                </th>

                                                <th>
                                                    Người đăng bài
                                                </th>
                                                <th class="col-3"></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Title)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Alias)
                                                    </td>

                                                    <td>
                                                        <img src="@Html.DisplayFor(modelItem => item.Image)" width="150" height="100" />
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.ModifiedBy)
                                                    </td>
                                                    <td>
                                                        <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.BlogId">Chỉnh sửa</a> |
                                                        <a asp-action="Details" class="btn btn-info" asp-route-id="@item.BlogId">Chi tiết</a> |
                                                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.BlogId">Xóa</a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <!-- /.card-body -->
                                <div class="card-footer clearfix">
                                    <ul class="pagination pagination-sm m-0 float-right">
                                        <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
                                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                                        <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
                                    </ul>
                                </div>
                            </div>
                            <!-- /.card -->
                            <!-- /.card -->
                        </div>
                        <!-- /.col -->
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                    <!-- /.row -->
                </div><!-- /.container-fluid -->
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
    </div>
</body>



