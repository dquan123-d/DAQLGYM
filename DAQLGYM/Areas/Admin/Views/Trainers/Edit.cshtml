@model DAQLGYM.Models.TblTrainer

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="wrapper">
    <!-- Navbar -->
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>General Form</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active">General Form</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">

                    <div class="col-md-12">
                        <!-- general form elements -->
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">Sửa HLV</h3>
                            </div>
                            <!-- /.card-header -->
                            <!-- form start -->
                            <form asp-action="Edit" class="m-3">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="TrainerId" />
                                <div class="form-group">
                                    <label asp-for="FullName" class="control-label">Tên HLV</label>
                                    <input asp-for="FullName" class="form-control" />
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Experience" class="control-label">Kinh nghiệm</label>
                                    <input asp-for="Experience" class="form-control" />
                                    <span asp-validation-for="Experience" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="ProfileImage" class="control-label">Ảnh</label>
                                    <input asp-for="ProfileImage" class="form-control" />
                                    <span asp-validation-for="ProfileImage" class="text-danger"></span>
                                </div>

                              
                                <div class="form-group">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>
                            </form>
                            <div>
                                <a asp-action="Index">Quay lại</a>
                            </div>
                        </div>
                        <!-- /.card -->

                    </div>

                </div>
                <!-- /.row -->
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
</div>
<!-- /.content-wrapper -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<h1>Edit</h1>

<h4>TblTrainer</h4>
